@model Bike

<div class="container">
<h2>Upravit kolo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.BikeName, new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BikeName)
                @Html.ValidationMessageFor(model => model.BikeName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BikeType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.BikeType, (List<SelectListItem>)ViewBag.typ)
                @Html.ValidationMessageFor(model => model.BikeType, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BikePrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BikePrice, new { htmlAttributes = new { @type = "number", @min = "0", @step = "1", @value = "0" } })
                @Html.ValidationMessageFor(model => model.BikePrice, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uložit" class="btn btn-success" />
            </div>
        </div>
}

    @Html.ActionLink("Zpět", "Index")
</div>