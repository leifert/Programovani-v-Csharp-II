<div class="text-center">
    <h2 class="display-4">Správa kol</h2>
    <hr/>
    <div class="text-right">
        <a asp-controller="Bike" asp-action="Create" class="btn btn-success">Vytvořit nové kolo</a>
    </div>
    <br/>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>
                Název
            </th>
            <th>
                Typ
            </th>
            <th>
                Cena/den
            </th>
            <th>
                Akce
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var bike in (IEnumerable<Bike>)ViewBag.Bikes)
        {
            <tr>
                <td >@bike.BikeName</td>
                <td >@bike.BikeType</td>
                <td >@bike.BikePrice</td>
                <td >
                    <div class="w-100 btn-group" role="group">
                        @Html.ActionLink("Upravit", "Edit", new { id = bike.Id }, new { @class = "btn btn-primary mx-1" })
                        @Html.ActionLink("Smazat", "Delete", new { id = bike.Id }, new { @class = "btn btn-danger mx-1" })
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
